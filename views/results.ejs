<% if(message.length>0) {%>
    <% if( message=="It is already aadded"){%>

        <div class="alert alert-warning" role="alert">
            <%= message  %> 
        
        </div>
    <%} else{%>
        <div class="alert alert-success" role="alert">
            <%= message  %> 
        </div>
    <%}%> 

<%}%> 

<ul>

    <% response.forEach(detail=>{%>
        <li> <a href='/movies/<%= detail.imdbID%>'><h2>Movie name is <%= detail.Title %> </h2> </a> </li>
        <ul>
            <li>The Year is <%= detail.Year%></li>
            
            <li>The Type is <%= detail.Type%></li>
            <br>
            <img src="<%= detail.Poster%>">
            <form action="/<%= detail.Title%>/<%= detail.imdbID%>" method="POST">
                <input type="submit" class="btn btn-outline-primary" value="Fave">
                
                <input type="hidden"  name="SearchText" value="<%= search %> ">
            </form>
        </ul>
    <%})%>
</ul>


